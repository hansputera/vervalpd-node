{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "module": "NodeNext",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "noImplicitReturns": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "moduleResolution": "NodeNext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}